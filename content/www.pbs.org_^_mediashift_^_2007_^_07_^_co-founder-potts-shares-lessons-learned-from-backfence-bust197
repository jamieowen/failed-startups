<div id="newsletter_dynamic_forms"></div>
<script type="text/javascript">
(function($) {
  $(function() {
    var forms = $("#newsletter_option_list form.mailchimp");
    var new_form = $("<form></form>");
    var email_input = $('<input id="newsletter_uber_email" type="email" value="" name="EMAIL" class="email" placeholder="email address" required>');
    var option_list = $("<ul id='newsletter_lists'></ul>");
    var submit_button = $('<input type="button" value="Subscribe" name="subscribe" class="button">');

    new_form.submit(function() { return false; });

    submit_button.click(function() {
      var email = $("#newsletter_uber_email").val();
      var count = 0;
      $('#newsletter_lists input:checked').each(function() {
        count++;
        var form_id = $(this).val();
        var form = $("#newsletter_form" + form_id);
        var form_email = form.find("input.email");
        form_email.val(email);
        form.submit();
      });

      if(count>0)
        new_form.replaceWith($("<div><strong>Thank you!  Check your email to confirm your subscription.</strong></div>"));
    });

    new_form.append(email_input);
    var x = 0;
    forms.each(function() {
      var form = $(this);
      form.attr("id", "newsletter_form" + x);
      var action = form.attr("action");
      var option_label = form.find("label").detach().attr("for","newsletter_list" + x);
      var option = $('<li></li>');
      var option_checkbox = $('<input type="checkbox" name="lists[]" value="' + x + '" id="newsletter_list' + x + '"/>');
      option.append(option_checkbox);
      option.append(option_label);
      option_list.append(option);

      var ifr = $("<iframe>");
      ifr.attr("name", "newsletter_signup_iframe" + x);
      $(ifr).hide();
      $("body").append(ifr);
      form.attr("target", ifr.attr("name"));

      x++;
    });
    new_form.append(option_list);
    new_form.append(submit_button);
    $("#newsletter_option_list").hide();
    $("#newsletter_dynamic_forms").append(new_form);
  });
})(jq);
</script>      </div>
    </div>

